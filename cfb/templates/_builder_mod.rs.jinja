#[cfg(not(target_endian = "little"))]
use std::mem::transmute;

  {%- for name, enum in mod.enums.items() %}
{%- set repr = cfb.rust_type(enum.UnderlyingType().BaseType()) %}

#[repr({{ repr }})]
#[derive(Clone, Copy, PartialEq, Debug)]
